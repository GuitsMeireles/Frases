<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PokemonActivity">

    <Button
        android:id="@+id/inicio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="36dp"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poke_TextView"
        app:layout_constraintVertical_bias="0.989" />

    <Button
        android:id="@+id/prox_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="409dp"
        android:text="Proximo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/poke_TextView"
        app:layout_constraintStart_toStartOf="@+id/poke_TextView"
        app:layout_constraintTop_toBottomOf="@+id/poke_TextView" />

    <TextView
        android:id="@+id/poke_TextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="198dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="14dp"
        android:text="Pokemons"
        android:textSize="34sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/prox_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>